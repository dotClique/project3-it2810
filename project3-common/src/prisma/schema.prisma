// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  alias        String       @id
  favorites    MovieGroup[]
  participates MovieEvent[]
}


model MovieGroup {
  movieGroupId  String       @id @default(cuid())
  name          String
  movieEvents   MovieEvent[]
  userFavorites User[]
}

model MovieEvent {
  movieEventId String     @id @default(cuid())
  date         DateTime
  imageUrl     String
  location     String
  movieGroupId String
  movieGroup   MovieGroup @relation(fields: [movieGroupId], references: [movieGroupId], onDelete: Cascade)
  participants User[]
}